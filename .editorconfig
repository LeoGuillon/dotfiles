# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
# encoding
charset = utf-8

# end of line
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = false

# indent type and size
indent_style = space
indent_size = 2

[*.py]
indent_size = 4
