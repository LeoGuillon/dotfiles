{
  "espanso-schema": {
    "body": [
      "# yaml-language-server: \\$schema=https://raw.githubusercontent.com/espanso/espanso/dev/schemas/match.schema.json",
      "# ───────────────────────────────────────────────────────────────────────────────"
    ],
    "prefix": "espanso-schema"
  },
  "regex": {
    "body": [
      "- regex: \"${1:expression}\"",
      "  replace: \"${2:replacement}\"",
      "$0"
    ],
    "prefix": "regex"
  },
  "trigger": {
    "body": [
      "- trigger: \"$1\"",
      "  replace: \"$2\""
    ],
    "prefix": "trigger"
  },
  "trigger-word": {
    "body": [
      "- trigger: \"$1\"",
      "  replace: \"$2\"",
      "  word: true",
      "  propagate_case: true",
      "$0"
    ],
    "prefix": "trigger-word"
  }
}
