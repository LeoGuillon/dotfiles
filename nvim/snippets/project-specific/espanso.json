{
  "espanso-schema": {
    "prefix": "espanso-schema",
    "body": [
      "# yaml-language-server: \\$schema=https://raw.githubusercontent.com/espanso/espanso/dev/schemas/match.schema.json",
      "# ───────────────────────────────────────────────────────────────────────────────"
    ]
  },
  "trigger": {
    "body": [
      "- trigger: \"$1\"",
      "  replace: \"$2\""
    ],
    "prefix": "trigger"
  },
  "trigger-word": {
    "body": [
      "- trigger: \"$1\"",
      "  replace: \"$2\"",
      "  word: true",
      "  propagate_case: true"
    ],
    "prefix": "trigger-word"
  }
}
