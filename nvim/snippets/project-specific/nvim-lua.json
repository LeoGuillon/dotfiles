{
  "map": {
    "body": "map(\"${1:mode}\", \"${2:keymap}\", \"${3:action}\", { desc = \"${4}\" })",
    "prefix": "map"
  },
  "map-leader": {
    "body": "map(\"${1:mode}\", \"<leader>${2:keymap}\", \"${3:action}\", { desc = \"${4:desc}\" })",
    "prefix": "map-leader"
  },
  "map-localleader": {
    "body": "map(\"${1:mode}\", \"<locallleader>${2:keymap}\", \"${3:action}\", { desc = \"${4:desc}\" })",
    "prefix": "map-localleader"
  },
  "require-map + map-require": {
    "body": "local map = require(\"core.utils\").map",
    "prefix": [
      "require-map",
      "map-require"
    ]
  },
  "which-key_group": {
    "body": "require(\"which-key\").add({ { \"${1:keymap}\", group = \"${2:name}\", icon = \"$3\"}})",
    "prefix": "which-key_group"
  }
}
