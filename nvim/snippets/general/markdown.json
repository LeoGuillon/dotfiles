{
  "Insert bold and italic text": {
    "body": "***${1}*** $0",
    "description": "Insert bold and italic text",
    "prefix": [
      "bold and italic",
      "bi"
    ]
  },
  "Insert bold text": {
    "body": "**${1}** $0",
    "description": "Insert bold text",
    "prefix": [
      "bold",
      "b"
    ]
  },
  "Insert code": {
    "body": "`${1}` $0",
    "description": "Insert code",
    "prefix": [
      "code"
    ]
  },
  "Insert code block": {
    "body": [
      "```${1:language}",
      "$0",
      "```"
    ],
    "description": "Insert fenced code block",
    "prefix": "codeblock"
  },
  "Insert horizontal rule": {
    "body": "---\n",
    "description": "Insert horizontal rule",
    "prefix": "horizontal rule"
  },
  "Insert italic text": {
    "body": "*${1}* $0",
    "description": "Insert italic text",
    "prefix": [
      "i",
      "italic"
    ]
  },
  "Insert link": {
    "body": "[${1:alias}](${2:url})",
    "description": "Insert an URL link",
    "prefix": [
      "url",
      "link",
      "[]()"
    ]
  },
  "Insert quoted text": {
    "body": "> ${1}",
    "description": "Insert quoted text",
    "prefix": "quote"
  },
  "header 1": {
    "body": [
      "# ${1}",
      " ",
      "$0"
    ],
    "description": "Add header level 1",
    "prefix": "h1"
  },
  "header 2": {
    "body": [
      "## ${0}"
    ],
    "description": "Add header level 2",
    "prefix": "h2"
  },
  "header 3": {
    "body": [
      "### ${0}"
    ],
    "description": "Add header level 3",
    "prefix": "h3"
  },
  "img": {
    "body": [
      "![${1:alt text}](${2:path}) ${0}"
    ],
    "description": "Add image",
    "prefix": [
      "img",
      "image"
    ]
  }
}
