{
  "WARN": { "prefix": ["warn"], "body": "$LINE_COMMENT WARN: $1" },
  "NOTE": { "prefix": ["note"], "body": "$LINE_COMMENT NOTE: $1" },
  "HACK": { "prefix": ["hack"], "body": "$LINE_COMMENT HACK: $1" },
  "TODO": { "prefix": ["todo"], "body": "$LINE_COMMENT TODO: $1" },
  "QUES": { "prefix": ["ques"], "body": "$LINE_COMMENT QUES: $1" },
  "BUG": { "prefix": ["bug", "fix"], "body": "$LINE_COMMENT BUG: $1" },
  "comment_h1": {
    "prefix": "comment_h1",
    "body": [
      "$LINE_COMMENT ────────────────────────────────────────────────────────────────────────────────",
      "$LINE_COMMENT (${1/(.*)/${1:/upcase}/})",
      "$LINE_COMMENT ────────────────────────────────────────────────────────────────────────────────"
    ]
  },
  "comment_h2": {
    "prefix": "comment_h2",
    "body": [
      "$LINE_COMMENT ────────────────────────────────────────────────────────────────────────────────",
      "$LINE_COMMENT ($1)"
    ]
  }
}

