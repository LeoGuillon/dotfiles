{
  "description": "app-layer, launched by holding right_option",
  "manipulators": [
    {
      "description": "e -> Finder",
      "conditions": [
        {
          "name": "APP",
          "type": "variable_if",
          "value": 1
        }
      ],
      "from": {
        "key_code": "e",
        "modifiers": {
          "optional": [
            "any"
          ]
        }
      },
      "to": [
        {
          "shell_command": "open -a 'Finder.app'"
        }
      ],
      "type": "basic"
    },
