# EditorConfig is awesome: https://editorconfig.org

root = true

[*]
charset = utf-8
# indentations
indent_style = space
indent_size = 2
# lines
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

# large indentations for filetypes that relies on indentation
[*.{just, py, yaml, yml}]
indent_style = space
indent_size = 4

# in text-based files, don't care about trailing whitespace
[*.md]
trim_trailing_whitespace = false

# to make sure the dashboard string lines in nvim-config don't get messy
[{dashboard.lua}]
trim_trailing_whitespace = false
